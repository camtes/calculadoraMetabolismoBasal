<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.CardView
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/historyDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:text="11/03/2015"/>

            <TextView
                android:id="@+id/historyMBR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:layout_below="@id/historyDate"
                android:text="@string/calculatorResultMBS"
                />

            <TextView
                android:id="@+id/historyMBRGenerated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:gravity="right"
                android:text="1829.34"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@id/historyDate"
                android:layout_toEndOf="@+id/historyMBR" />

            <TextView
                android:id="@+id/historyMBRCalorIes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:layout_below="@id/historyMBR"
                android:text="@string/calculatorResultCalories"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/historyMBRCalorIesGenerated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="right"
                android:text="1829.34"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@id/historyMBR"
                android:layout_toEndOf="@+id/historyMBRCalorIes" />
            <TextView
                android:id="@+id/historyCaloriesLostWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="@string/calculatorResultLostCalories"
                android:layout_below="@+id/historyMBRCalorIes"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/historyCaloriesLostWeightGenerated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="right"
                android:text="1829.34"
                android:textColor="@android:color/darker_gray"
                android:layout_toEndOf="@+id/historyCaloriesLostWeight"
                android:layout_above="@+id/historyCaloriesGainWeight" />
            <TextView
                android:id="@+id/historyCaloriesGainWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:layout_below="@id/historyCaloriesLostWeight"
                android:text="@string/calculatorResultGainCalories"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/historyCaloriesGainWeightGenerated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:gravity="right"
                android:text="1829.34"
                android:textColor="@android:color/darker_gray"
                android:layout_below="@id/historyCaloriesLostWeight"
                android:layout_toEndOf="@+id/historyCaloriesGainWeight" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>